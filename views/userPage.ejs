<body style="background-color: gray" class="main-bg">
    

    <div class="d-flex container justify-center align-items-center">
    <div class="d-flex justify-content-center align-items-center" style="margin-top: 30px">
        <div class="mb-3 mt-4">
            <div class="align-top">
            <a href="/home">
                <button class="btn btn-warning">LOGOUT</button>
            </a>
            </div>
            <h1>Welcome</h1>
            <h5 class="mt-3">Details</h5>
            <table class="table mt-3">
        <tbody>
          <tr>
            <th>Fullname</th>
            <td><%= bioList.fullname %></td>
          </tr>
          <tr>
            <th>City</th>
            <td><%= bioList.city %></td>
          </tr>
          <tr>
            <th>Age</th>
            <td><%= bioList.age %></td>
          </tr>
        </tbody>
    </table>
    
    <a href="/updatebiodata/<%= id %> ">
        <button class="btn btn-success">Update BIO</button>
    </a>
    <a href="/deleteuser/<%= id %> ">
        <button class="btn btn-danger">Delete BIO</button>
    </a>

    <h3>Activities</h3>
      <table class="table mt-3">
        <thead>
          <tr>
            <th>winStatus</th>
            <th>score</th>
