<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="style/game.css">
    <link href='https://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet'>
    <title>Game Suit</title>
</head>
<body>

    <!--Bagian atas-->
    <div class="container-satu">
        <img src="assets/_.png" class="satu">
        <img src="assets/logo 1.png" class="dua">
        <span class="tiga"><b>ROCK PAPER SCISSORS</b></span>
    </div>
    <!--Bagian atas selesai-->
    <!-- LogOut -->
    <div class="LogOut">
        <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">My Account</button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="home">Log Out</a></li>
        </ul>
    </div>
    <!-- LogOut Selesai -->
    <!--Batu, kertas, gunting-->
    <div class="container">
        <div class="team">
            <span class="p1"><b>PLAYER 1</b></span>
            <span class="computer">COM</span>
        </div>
        <div class="batu">
            <div class="wrapper-batu-satu">
                <img class="batu-satu" src="assets/batu 1.png">
            </div>
            <div class="wrapper-batu-dua">
                <img class="batu-dua" src="assets/batu 2.png">
            </div>
        </div>
        <div class="kertas">
            <div class="wrapper-kertas-satu">
                <img class="kertas-satu" src="assets/kertas 1.png">
            </div>
            <span class="versus">VS</span>
            <span class="player-one hide">PLAYER 1 WIN</span>
            <span class="com-menang hide">COM<br>WIN</span>
            <span class="seri hide">DRAW</span>
            <div class="wrapper-kertas-dua">
                <img class="kertas-dua" src="assets/kertas 2.png">
            </div>
        </div>
        <div class="gunting">
            <div class="wrapper-gunting-satu">
                <img class="gunting-satu" src="assets/gunting 1.png">
            </div>
            <div class="wrapper-gunting-dua">
                <img class="gunting-dua" src="assets/gunting 2.png">
            </div>
        </div>
        <img class="refresh" src="assets/refresh 2.png">
    </div>
    <!--Batu, kertas, gunting selesai-->

    <script src="script/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>


</body>
</html>